{% extends 'base.html.twig' %}

{% block title %}Pharmaton{% endblock %}

{% block body %}
    <div class="container">
        <div class="flex">
            <div class="w-1/5"></div>
            <div class="w-3/5 flex pl-10 pr-10 flex-wrap content-center min-h-screen">
                <div class="text-white w-full font-semibold font-sans text-center">
                    <p class="text-4xl">Bienvenue dans Pharmaton</p>
                    <p class="text-2xl mt-4">Le système de gestion de pharmacie</p>
                </div>

                <div class="bg-gray-300 rounded mt-24 w-full pl-5 pr-5">
                    <p class="text-xs text-center text-gray-700 mt-8">Authentifiez-vous avec vos identifiants</p>

                    <div class="mt-10 mb-16">
                        <form method="post">
                            <div class="flex flex-wrap -mx-2">
                                <label class="block w-full px-2">
                                    <span class="text-sm font-semibold text-gray-700">Nom d'utilsateur</span>
                                    <input type="text" class="form-input mt-1 block w-full focus:outline-none" placeholder="Votre nom d'utilisateur">
                                </label>
                                <label class="mt-4 block w-full px-2">
                                    <span class="text-sm font-semibold text-gray-700">Mot de passe</span>
                                    <input type="password" class="form-input mt-1 block w-full focus:outline-none" placeholder="Votre mot de passe">
                                </label>
                                <div class="px-2 mt-4 block w-full">
                                    <a href="#" class="no-underline text-blue-500 text-xl hover:text-blue-800">
                                        Mot de passe oublié ?
                                    </a>
                                </div>
                                <div class="mt-4 mb-4 block text-center w-full">
                                    <button class="bg-transparent border border-blue-500 focus:outline-none hover:text-white hover:bg-blue-500 rounded text-blue-600 px-4 py-2" type="submit">
                                        Connectez-vous
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="w-1/5"></div>
        </div>
    </div>
{% endblock %}
